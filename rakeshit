   Name = "Scrap ESP",
   CurrentValue = false,
   Flag = "scrapesp",
   Callback = function(v)
      scrapEnabled = v
      configValues.scrapesp = v
      if not v then
         for _,esp in pairs(scrapESP) do
            esp.box.Visible = false
            esp.text.Visible = false
            esp.dist.Visible = false
         end
      end
   end,
})

